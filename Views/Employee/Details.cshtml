@model PayrollProject.ViewModel.EmployeeViewModels.EmployeeVM
@{
    ViewData["Title"] = "Employee Details";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title m-0"><i class="fas fa-id-card mr-2"></i>Employee Details</h3>
        <div class="card-tools">
            <a accesskey="b" id="btnBack" asp-action="Index" class="btn btn-secondary mr-2"><i class="fas fa-arrow-left"></i> Back</a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="text-center mb-3">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width:120px;height:120px;">
                        <i class="fas fa-user fa-4x text-muted"></i>
                    </div>
                    <h4 class="mt-3 mb-0">@Model.FullName</h4>
                    <span class="badge badge-@((Model.Status == "Active") ? "success" : "secondary")">@Model.Status</span>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Designation:</strong> @Model.Designation</li>
                    <li class="list-group-item"><strong>Department:</strong> @Model.Department</li>
                    <li class="list-group-item"><strong>Employment Type:</strong> @Model.EmploymentType</li>
                </ul>
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <tbody>
                            <tr>
                                <th style="width:30%">Employee ID</th>
                                <td>@Model.EmployeeCode</td>
                            </tr>
                            <tr>
                                <th style="width:30%">Full Name</th>
                                <td>@Model.FullName</td>
                            </tr>
                            <tr>
                                <th>Gender</th>
                                <td>@Model.Gender</td>
                            </tr>
                            <tr>
                                <th>Date Of Birth</th>
                                <td>@Model.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            </tr>
                            <tr>
                                <th>Joining Date</th>
                                <td>@Model.JoiningDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                            <tr>
                                <th>Basic Salary</th>
                                <td>@Model.BasicSalary.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("bn-BD"))</td>
                            </tr>
                            <tr>
                                <th>Bank Account Number</th>
                                <td>@Model.BankAccountNumber</td>
                            </tr>
                            <tr>
                                <th>Shift</th>
                                <td>@Model.ShiftName</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>@Model.Status</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>