@model PayrollProject.ViewModel.AttendanceViewModels.AttendanceVM
@{
    ViewData["Title"] = "Attendance Details";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title m-0"><i class="fas fa-check-circle mr-2"></i>Attendance Details</h3>
        <div class="card-tools">
            <a accesskey="b" id="btnBack" asp-action="Index" class="btn btn-secondary mr-2"><i class="fas fa-arrow-left"></i> Back</a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="text-center mb-3">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width:120px;height:120px;">
                        <i class="fas fa-calendar-check fa-4x text-muted"></i>
                    </div>
                    <h4 class="mt-3 mb-0">Attendance Record</h4>
                    <span class="badge badge-@((Model.Status == "Present") ? "success" : "warning")">@Model.Status</span>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Employee ID:</strong> @Model.EmployeeId</li>
                    <li class="list-group-item"><strong>Date:</strong> @Model.AttendanceDate.ToString("yyyy-MM-dd")</li>
                    <li class="list-group-item"><strong>Working Hours:</strong> @Model.WorkingHours hours</li>
                </ul>
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <tbody>
                            <tr>
                                <th style="width:30%">Attendance ID</th>
                                <td>@Model.AttendanceId</td>
                            </tr>
                            <tr>
                                <th>Employee ID</th>
                                <td>@Model.EmployeeId</td>
                            </tr>
                            <tr>
                                <th>Attendance Date</th>
                                <td>@Model.AttendanceDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                            <tr>
                                <th>In Time</th>
                                <td>@(Model.InTime?.ToString(@"hh\:mm") ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Out Time</th>
                                <td>@(Model.OutTime?.ToString(@"hh\:mm") ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>@Model.Status</td>
                            </tr>
                            <tr>
                                <th>Working Hours</th>
                                <td>@Model.WorkingHours hours</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>