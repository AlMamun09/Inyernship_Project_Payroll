@model PayrollProject.ViewModel.LeaveViewModels.LeaveVM
@{
    ViewData["Title"] = "Leave Details";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title m-0"><i class="fas fa-calendar-alt mr-2"></i>Leave Details</h3>
        <div class="card-tools">
            <a accesskey="b" id="btnBack" asp-action="Index" class="btn btn-secondary mr-2"><i class="fas fa-arrow-left"></i> Back</a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="text-center mb-3">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width:120px;height:120px;">
                        <i class="fas fa-calendar-day fa-4x text-muted"></i>
                    </div>
                    <h4 class="mt-3 mb-0">Leave Record</h4>
                    <span class="badge badge-@((Model.LeaveStatus == "Approved") ? "success" : (Model.LeaveStatus == "Rejected") ? "danger" : "warning")">@Model.LeaveStatus</span>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Employee:</strong> @Model.EmployeeName</li>
                    <li class="list-group-item"><strong>Leave Type:</strong> @Model.LeaveType</li>
                    <li class="list-group-item"><strong>Total Days:</strong> @Model.TotalDays</li>
                </ul>
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <tbody>
                            <tr>
                                <th style="width:30%">Leave ID</th>
                                <td>@Model.LeaveId</td>
                            </tr>
                            <tr>
                                <th>Employee Name</th>
                                <td>@Model.EmployeeName</td>
                            </tr>
                            <tr>
                                <th>Leave Type</th>
                                <td>@Model.LeaveType</td>
                            </tr>
                            <tr>
                                <th>Start Date</th>
                                <td>@Model.StartDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                            <tr>
                                <th>End Date</th>
                                <td>@Model.EndDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                            <tr>
                                <th>Total Days</th>
                                <td>@Model.TotalDays</td>
                            </tr>
                            <tr>
                                <th>Leave Status</th>
                                <td>@Model.LeaveStatus</td>
                            </tr>
                            <tr>
                                <th>Remarks</th>
                                <td>@(string.IsNullOrEmpty(Model.Remarks) ? "N/A" : Model.Remarks)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>