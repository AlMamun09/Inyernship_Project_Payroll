@using PayrollProject.ViewModel
@model ShiftVM
@{
    ViewData["Title"] = "Shift Details";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title m-0"><i class="fas fa-clock mr-2"></i>Shift Details</h3>
        <div class="card-tools">
            <a accesskey="b" id="btnBack" asp-action="Index" class="btn btn-secondary mr-2"><i class="fas fa-arrow-left"></i> Back</a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="text-center mb-3">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width:120px;height:120px;">
                        <i class="fas fa-clock fa-4x text-muted"></i>
                    </div>
                    <h4 class="mt-3 mb-0">@Model.ShiftName</h4>
                    <span class="badge badge-@(Model.IsActive ? "success" : "secondary")">@(Model.IsActive ? "Active" : "Inactive")</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <tbody>
                            <tr>
                                <th style="width:30%">Shift Name</th>
                                <td>@Model.ShiftName</td>
                            </tr>
                            <tr>
                                <th>Start Time</th>
                                <td>@Model.StartTime.ToString(@"hh\:mm")</td>
                            </tr>
                            <tr>
                                <th>End Time</th>
                                <td>@Model.EndTime.ToString(@"hh\:mm")</td>
                            </tr>
                            <tr>
                                <th>Duration</th>
                                <td>@((Model.EndTime - Model.StartTime).ToString(@"hh\:mm")) hours</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>@(Model.IsActive ? "Active" : "Inactive")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>